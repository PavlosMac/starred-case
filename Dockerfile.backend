FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy backend source and database files
COPY backend/ ./backend/
COPY db/ ./db/

# Initialize database (create tables + seed data)
RUN npm run db:reset

EXPOSE 3001

# Run with tsx for TypeScript support
CMD ["npm", "run", "server:dev"]
